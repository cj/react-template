{
  "name": "template",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@reach/router": "^1.2.1",
    "nprogress": "^0.2.0",
    "react": "^16.7.0-alpha.0",
    "react-delay": "^0.1.0",
    "react-dom": "^16.7.0-alpha.0",
    "react-hot-loader": "^4.3.12",
    "react-scripts": "2.1.1",
    "styled-jsx": "^3.1.0",
    "typescript": "3.1.6"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development SKIP_PREFLIGHT_CHECK=true craco start",
    "build": "cross-env NODE_ENV=production SKIP_PREFLIGHT_CHECK=true craco build",
    "generate-sw": "cross-env NODE_ENV=production sw-precache --root=build --config scripts/sw-precache-config.js && uglifyjs build/service-worker.js -o build/service-worker.js",
    "test": "cross-env NODE_ENV=test SKIP_PREFLIGHT_CHECK=true craco test",
    "eject": "craco eject",
    "postinstall": "patch-package",
    "postbuild": "cross-env NODE_ENV=production react-snap && npm run generate-sw"
  },
  "reactSnap": {
    "inlineCss": true,
    "asyncScriptTags": true,
    "include": [
      "/200.html"
    ],
    "minifyHtml": {
      "sortClassName": false
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended",
      "airbnb"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "typescript-eslint-parser",
        "parserOptions": {
          "ecmaFeatures": {
            "jsx": true
          }
        },
        "rules": {
          "no-undef": "off",
          "no-unused-vars": "off",
          "react/jsx-closing-tag-location": "off",
          "import/prefer-default-export": "off",
          "react/prop-types": "off"
        }
      },
      {
        "files": [
          "**/*.d.ts"
        ],
        "rules": {
          "import/export": "off"
        }
      }
    ],
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "~",
              "./src"
            ]
          ],
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".json"
          ]
        }
      }
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/"
          ]
        }
      ],
      "react/jsx-one-expression-per-line": 0,
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.jsx",
            "**/test.jsx",
            "**/*.test.tsx",
            "**/test.tsx",
            "**/*.config.js",
            "**/stories.jsx"
          ]
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@craco/craco": "^2.0.2",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.2",
    "@types/nprogress": "0.0.29",
    "@types/reach__router": "^1.2.2",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/react-hot-loader": "^4.1.0",
    "@types/styled-jsx": "^2.2.7",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-alias": "^1.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "node-sass": "^4.10.0",
    "react-snap": "^1.19.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.7.1",
    "stylelint-config-standard": "^18.2.0",
    "sw-precache": "^5.2.1",
    "tailwindcss": "^0.7.2",
    "typescript-eslint-parser": "^20.1.1",
    "uglifyjs": "^2.4.11"
  }
}
