{
  "name": "template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development SKIP_PREFLIGHT_CHECK=true craco start",
    "build": "cross-env NODE_ENV=production SKIP_PREFLIGHT_CHECK=true craco build",
    "generate-sw": "cross-env NODE_ENV=production sw-precache --root=build --config scripts/sw-precache-config.js && uglifyjs build/service-worker.js -o build/service-worker.js",
    "test": "cross-env NODE_ENV=test SKIP_PREFLIGHT_CHECK=true craco test",
    "eject": "craco eject",
    "postinstall": "patch-package",
    "postbuild": "cross-env NODE_ENV=production react-snap && npm run generate-sw",
    "storybook": "start-storybook -p 9009 -s public --ci",
    "build-storybook": "build-storybook -s public",
    "lint": "run-p lint:js lint:css",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:css": "stylelint '**/*.{scss,css}'"
  },
  "reactSnap": {
    "inlineCss": true,
    "asyncScriptTags": true,
    "include": [
      "/200.html"
    ],
    "minifyHtml": {
      "sortClassName": false
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add"
    ],
    "*.{css,scss}": [
      "npm run lint:css",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@firebase/auth-types": "^0.3.4",
    "@firebase/firestore-types": "^0.7.0",
    "@reach/router": "^1.2.1",
    "firebase": "^5.5.7",
    "nprogress": "^0.2.0",
    "react": "^16.7.0-alpha.0",
    "react-delay": "^0.1.0",
    "react-dom": "^16.7.0-alpha.0",
    "react-hot-loader": "^4.3.12",
    "react-scripts": "2.1.1",
    "typescript": "3.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@craco/craco": "^2.0.2",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "@storybook/addon-actions": "^4.0.4",
    "@storybook/addon-info": "^4.0.4",
    "@storybook/addon-links": "^4.0.4",
    "@storybook/addon-options": "^4.0.4",
    "@storybook/addon-storysource": "^4.0.4",
    "@storybook/addons": "^4.0.4",
    "@storybook/cli": "^4.0.4",
    "@storybook/react": "^4.0.4",
    "@types/firebase": "^3.2.1",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.3",
    "@types/nprogress": "0.0.29",
    "@types/reach__router": "^1.2.2",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/react-hot-loader": "^4.1.0",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-links": "^3.3.2",
    "@types/storybook__react": "^4.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-alias": "^1.1.1",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "firebase-tools": "^6.0.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "patch-package": "^5.1.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-snap": "^1.19.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.7.1",
    "stylelint-config-standard": "^18.2.0",
    "sw-precache": "^5.2.1",
    "tailwindcss": "^0.7.2",
    "typescript-eslint-parser": "^20.1.1",
    "uglifyjs": "^2.4.11"
  }
}
