  },
  "devDependencies": {
    "@firebase/auth-types": "^0.3.4",
    "concurrently": "^4.0.1",
    "firebase-tools": "^6.0.1",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6"
  },
  "private": true
